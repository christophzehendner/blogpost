  </section>
  <section class="section -cats">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-6 col-12">
          <div class="card -cats">
            <figure>
              <a href="" class="link"></a>
              <img src="public/Images/image1.jpeg" alt="" class="img">
              <figcaption class="title">Fashion</figcaption>
